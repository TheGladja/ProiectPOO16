#include <bits/stdc++.h>

using namespace std;

class Individ
{
    int i;
    int varsta;
    char tip;
    double energie;
    unsigned char viu;

    void hraneste();
    void inmulteste();
    void ataca();
    void imbatraneste();
    void moare();

public:

    Constructor (int i, char tip);

    void actualizare();
    int esteviu();
    int gettip();

    void citire();

};

Individ::Constructor(int i, char tip)
{
    this-> i= i;
    this-> tip= tip;
    this-> varsta= 0;
    this-> energie= 4;
    this-> viu= '1';
}

void Individ::citire()
{
    cout<<"\nPozitia: ";
    cin>> this->i;
    cout<<"\nVarsta: ";
    cin>>this->varsta;
    cout<<"\nTip('+' sau '0'): ";
    cin>>this->tip;
    cout<<"\nEnergie: ";
    cin>>this->energie;
    cout<<"\nViu(este 1 daca e viu si 0 daca e mort): ";
    cin>>this->viu;
}

void Individ::hraneste()
{
    this-> energie += rand()%10+1;
}

void Individ::inmulteste()
{

}

void Individ::ataca()
{

}

void Individ::imbatraneste()
{
    if(this->viu=='1')
    {
        const int valoare=2;
        cout<<"\nVarsta va creste cu valoarea 1";
        this->varsta++;
        cout<<"\nEnergia va scadea cu valoarea 2";
        this->energie -= valoare;
        if(this->varsta>50 || this->energie<=0)
            moare();
    }
    else
        cout<<"\nIndividul era mort deja :(";
}

void Individ::moare()
{
    this-> viu= '0';
    cout<<"\nIndividul a murit de boala grea :(";
}

void Individ::actualizare()
{
    hraneste();
    inmulteste();
    ataca();
    imbatraneste();
}

int Individ::esteviu()
{
    if(this-> viu == '1')
        return 1;
    return 0;
}

int Individ::gettip()
{
    return tip;
}

void CitireIndivizi(int& n, Individ a[])
{
    int i;
    cout<<"Numarul de indivizi ales: ";
    cin>>n;
    for(i=0;i<n;i++)
    {
        a[i].citire();
    }
}

int main()
{
    static Individ a[30];

    int n, i, task;

    CitireIndivizi(n,a);

    for(i=0;i<n;i++)
    {
        cout<<"\nCe vrei sa faci cu individul numarul "<<i+1<<"?";
        cout<<"\nPress 1 for update ";
        cout<<"\nPress 2 for status ";
        cout<<"\nPress 3 for type ";
        cin>>task;
        if(task==1)
            a[i].actualizare();
        else if(task==2)
                {
                    if(a[i].esteviu()==1)
                        cout<<"\n"<<"Individul urmator este viu.";
                    else
                        cout<<"\n"<<"Individul urmator nu este viu.";
                }
        else if(task==3)
            cout<<"\n"<<"Tipul individului este "<<(char)a[i].gettip();
    }

    return 0;
}
